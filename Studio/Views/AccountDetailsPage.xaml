<Page x:Class="Studio.Views.AccountDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Studio.Views"
      xmlns:controls="clr-namespace:Studio.Controls"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      xmlns:data="clr-namespace:Studio.Services.Data"
      d:DataContext="{d:DesignInstance Type=data:DesignTimeSampleData, IsDesignTimeCreatable=True}"
      d:DesignHeight="450" d:DesignWidth="800"
      KeepAlive="True"
      Title="AccountDetailsPage">

    <Grid
        Margin="{StaticResource SmallLeftTopRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" MinHeight="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Player Title-->
        <Viewbox HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <ui:Image
                    CornerRadius="15"
                    Width="160">
                    <ui:Image.Source>
                        <Binding Path="Profile.AvatarURL" >
                            <Binding.TargetNullValue>
                                <ImageSource>/Resources/PlaceholderPlayerIcon.png</ImageSource>
                            </Binding.TargetNullValue>
                        </Binding>
                    </ui:Image.Source>
                </ui:Image>
                <Grid
                    Grid.Column="1"
                    MinWidth="100">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ui:TextBlock
                        Text="{Binding Profile.CustomName}"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        FontFamily="{StaticResource BigNoodleTooOblique}"
                        VerticalAlignment="Bottom"
                        FontTypography="Title"
                        FontSize="70"></ui:TextBlock>
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{StaticResource TextFillColorSecondaryBrush}"
                        Text="{Binding Profile.Battletag}"
                        VerticalAlignment="Top"
                        FontTypography="Subtitle"
                        FontSize="30"></ui:TextBlock>
                </Grid>
            </Grid>
        </Viewbox>
        <ui:Button
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Click="OnBackButtonClick">
            <ui:SymbolIcon Symbol="ArrowPrevious12" FontSize="20"/>
        </ui:Button>
        
        <controls:MultiRankDisplay
            Grid.Row="1"
            Grid.Column="0"
            Career="{Binding Profile.LatestSnapshot}"
            Padding="{StaticResource XSmallTopMargin}"
            x:Name="RankDisplay"/>

        <lvc:CartesianChart
            x:Name="RankChart"
            Grid.Row="2"
            Grid.Column="0"
            Series="{Binding RankSeries}"
            XAxes="{Binding RankXAxes}"
            YAxes="{Binding RankYAxes}"

            
            
            FindingStrategy="Automatic">
            <lvc:CartesianChart.Sections>
                <lvc:SectionsCollection>
                    <lvc:XamlRectangularSection
                        Xi="{Binding CurrentRegionLow}"
                        Xj="{Binding CurrentRegion}"
                        Fill="{lvc:SolidColorPaint Color='#FFFFFF'}"/>
                </lvc:SectionsCollection>
            </lvc:CartesianChart.Sections>
               
                    
        </lvc:CartesianChart>

        <lvc:PolarChart 
            SnapsToDevicePixels="True"
            x:Name="StatPolarGraph" Grid.Row="2" Grid.Column="1"
            InitialRotation="-45"
            Series="{Binding StatGraphSeries}"
            RadiusAxes="{Binding RadiusAxes}"
            AngleAxes="{Binding AngleAxes}"
            Margin="-30"
            MouseWheel="polar_MouseWheel"
                        >
            

        </lvc:PolarChart>
    </Grid>
</Page>
