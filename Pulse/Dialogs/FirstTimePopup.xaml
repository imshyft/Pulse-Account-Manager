<ui:ContentDialog x:Class="Studio.Dialogs.SettingsReviewDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Studio.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:SettingsReviewDialog}" />
    </ui:ContentDialog.Resources>
    <Grid
        MaxWidth="400">
        <StackPanel>
            <ui:TextBlock
                x:Name="headerTextBlock"
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Style="{StaticResource BodyTextStyle}"
                Margin="{StaticResource MediumLeftTopRightBottomMargin}"
                Text="Header"/>

            <ui:TextBlock
                TextAlignment="Center"
                FontTypography="Body"
                Text="Overwatch Install" />
            <Grid
                Margin="{StaticResource SmallTopBottomMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <ui:TextBox
                    x:Name="OverwatchDirTextBox"
                    IsReadOnly="True"
                    IsEnabled="False"
                    PlaceholderText="Press ... to open file picker"/>
                <ui:Button
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="..."
                    Click="OnOverwatchDirFilePickerButtonClick"/>
            </Grid>
            <ui:InfoBar
                x:Name="OverwatchDirInfoBar"
                IsOpen="False"/>


            <ui:TextBlock
                Padding="{StaticResource SmallTopMargin}"
                TextAlignment="Center"
                FontTypography="Body"
                Text="Battle.net Config File" />
            <Grid
                Margin="{StaticResource SmallTopBottomMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <ui:TextBox
                    x:Name="BnetConfigTextBox"
                    IsReadOnly="True"
                    IsEnabled="False"
                    PlaceholderText="Config File Path ..."/>
                <ui:Button
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="..."
                    Click="OnConfigFilePickerButtonClick"/>
            </Grid>
            <ui:InfoBar
                x:Name="BnetConfigInfoBar"
                IsOpen="False"/>
        </StackPanel>
    </Grid>
</ui:ContentDialog>
